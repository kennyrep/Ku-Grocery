<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/add_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Add Product"
            android:textAlignment="center"
            android:textColor="#003366"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/please"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/add_product"
            android:layout_marginTop="5sp"
            android:text="Please Add Product to Store"
            android:textAlignment="center"
            android:textColor="#003366" />

        <EditText
            android:id="@+id/product_name"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/please"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="#003366" />

        <EditText
            android:id="@+id/product_id"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Product Id"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="#003366"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/product_category"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_id"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/product_size"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_category"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Size"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="#003366" />

        <EditText
            android:id="@+id/product_description"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Description"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="#003366" />

        <EditText
            android:id="@+id/product_price"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_description"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Price"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="#003366" />

        <EditText
            android:id="@+id/product_quantity"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_price"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Quantity"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="#003366" />

        <TextView
            android:id="@+id/product_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_quantity"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:text="Upload Image"
            android:textColor="#003366"
            android:textSize="18dp" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/product_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/product_quantity"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/product_image_text"
            android:src="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/product_add"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/product_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape"
            android:fontFamily="serif"
            android:text="Add"
            android:textColor="#003366"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>