<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CashierSignIn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/first_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/shopping_cart" />

    <TextView
        android:id="@+id/cashier_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cashier Signin"
        android:fontFamily="serif"
        android:layout_below="@+id/first_image"
        android:textColor="#003366"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>




        <EditText
            android:id="@+id/cashier_id"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/cashier_text"
            android:layout_marginTop="90dp"
            android:ems="10"
            android:fontFamily="serif"
            android:textColorHint="#003366"
            android:hint="User Id"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:background="@drawable/shape"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/cashier_password"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/cashier_id"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:fontFamily="serif"
            android:textColorHint="#003366"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:background="@drawable/shape"
            android:gravity="center"
            />



        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/cashier_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape"
            android:textColor="#003366"
            android:text="Sing In"
            android:fontFamily="serif"
            android:id="@+id/casher_signin"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>
</ScrollView>