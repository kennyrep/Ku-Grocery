<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/first_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/shopping_cart" />

        <TextView
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:fontFamily="serif"
            android:text="Admin"
            android:textColor="#003366"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/admin"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="#003366" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editText1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="#003366" />

        <Button
            android:id="@+id/admin_signin"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape"
            android:fontFamily="serif"
            android:text="Sing In"
            android:textColor="#003366"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_signin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="serif"
                android:text="Sign In as Cashier?"
                android:textColor="#003366"
                android:textSize="15sp" />

            <Button
                android:id="@+id/cashier_login"
                android:layout_width="74dp"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/textView9"
                android:background="@android:color/transparent"
                android:fontFamily="serif"
                android:text="SIGN IN"
                android:textColor="#003366"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>


</ScrollView>